@model ProjectMaintenance.Models.PMTicket

@{
    ViewData["Title"] = "Delete";
}

<h1>Are you sure you want to delete this PM ticket?</h1>
<div>
    <hr />
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-6">
            <div class="details-card h-100">
                <div class="card-header">
                    <div class="card-title"><b>@Html.DisplayFor(model => model.Equipment.Name)</b></div>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-light list-group-small">
                        <li class="list-group-item px-4"><b>Task:</b> <span>@Html.DisplayFor(model => model.Title)</span></li>
                        <li class="list-group-item px-4"><b>Date to Be Performed:</b> <span>@Html.DisplayFor(model => model.DatePerformed)</span></li>
                        <li class="list-group-item px-4"><b>Equipment Description:</b> <span>@Html.DisplayFor(model => model.Equipment.Description)</span></li>
                    </ul>
                </div>
                <div class="card-footer d-flex">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                        <a asp-controller="Calendar" asp-action="Index" class="btn btn-secondary return-btn">Back to Calendar</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
